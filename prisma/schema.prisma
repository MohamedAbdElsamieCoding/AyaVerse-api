// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}
model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role Role @default(USER)
  name String?
  bookmark Bookmark[]

  lastReadSurah Int?
  lastReadAyah Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Surah {
  id             Int      @id @default(autoincrement())
  number         Int      @unique
  nameArabic     String
  nameEnglish    String
  revelationType String
  ayahCount      Int
  ayahs          Ayah[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  @@map("surahs")
}

model Ayah {
  id           Int           @id @default(autoincrement())
  number       Int
  textArabic   String        @db.Text
  textArabicSimple   String        @db.Text @default("")
  juzNumber    Int
  pageNumber   Int
  surahId      Int
  surah        Surah         @relation(fields: [surahId], references: [id])
  translations Translation[]
  bookmark     Bookmark[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([surahId, number])
  @@map("ayahs")
}

model Translation {
  id        Int      @id @default(autoincrement())
  text      String   @db.Text
  language  String
  author    String
  ayahId    Int
  ayah      Ayah     @relation(fields: [ayahId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("translations")
}

model Juz {
  id        Int      @id @default(autoincrement())
  number    Int      @unique
  startAyah Int
  endAyah   Int

  @@map("juzs")
}

model Bookmark {
  id Int @id @default(autoincrement())
  userId String
  ayahId Int

  user User @relation(fields: [userId] , references: [id])
  ayah Ayah @relation(fields: [ayahId] , references: [id])

  createdAt DateTime @default(now())

  @@unique([userId , ayahId])
  @@map("bookmarks")
}